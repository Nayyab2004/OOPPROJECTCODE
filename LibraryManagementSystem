        // TODO add your handling code here:
        
          if (su.getText().isEmpty() || sp.getText().isEmpty()) {
        JOptionPane.showMessageDialog(null, "Please fill both Username and Password fields for student.");
    } else {
        // If fields are not empty, proceed with login
        if (su.getText().equals("student") && sp.getText().equals("123")) {
            StudentPortal sp = new StudentPortal();
            sp.setVisible(true);
        } else {
            JOptionPane.showMessageDialog(null, "Incorrect userID or Password.");
        }
    }
          
        
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
