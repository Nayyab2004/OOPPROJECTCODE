package GUI;

import Controller.FileController;
import javax.swing.JOptionPane;

public class AddBooks extends javax.swing.JFrame {
    /**
     * Creates new form AddBooks
     */
    private FileController cn;
    public AddBooks() {
        initComponents();
        cn=new FileController();
    }                   
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        this.setVisible(false);
    }                                        

    private void jButton9ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         String ID=id.getText();
        String BookName=n.getText();
        String Author=a.getText();
        String TotalPages=tp.getText();
        String Category=cy.getSelectedItem().toString();
        if (ID.isEmpty() || BookName.isEmpty() || Author.isEmpty() || TotalPages.isEmpty() || Category.equals(" ")) {
        JOptionPane.showMessageDialog(null, "All fields are required. Please fill in all details.");
        return; // Exit the method if any field is empty
    }

    // Check if Total Pages is a valid number
    try {
        Integer.parseInt(TotalPages); // Try converting to integer
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(null, "Please enter a valid number for Total Pages.");
        return; // Exit the method if Total Pages is not a valid number
    }
 
        String m="\nId :"+ID+" Name: "+BookName+" Author: "+Author+" TotalPages: "+TotalPages+" Category: "+Category;
        System.out.println(m);
        
        
        String fileName = "C:\\Users\\user\\Desktop.txt";
        cn.createFile(fileName);
        cn.add(m,fileName);
        JOptionPane.showMessageDialog(null,"Added Sucessfully");
        id.setText("");
        n.setText("");
        a.setText("");
        tp.setText("");
        
    }                                        

