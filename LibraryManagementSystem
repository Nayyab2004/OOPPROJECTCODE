        // TODO add your handling code here:
                  // TODO add your handling code here:
        String fileName = "C:\\Users\\user\\Desktop.txt";
        txt.setText(" ");
        cn.deleteLine(id.getText(),fileName);
        String rr;
        try {
            rr = cn.readFile(fileName);
            txt.setText(" ");
            txt.setText(rr);
        } catch (IOException ex) {
            System.out.println("Error");
        }
    }                                        

