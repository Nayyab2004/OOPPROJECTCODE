7)UPDATE BOOK:
package GUI;
import javax.swing.JOptionPane;

import Controller.FileController;

public class UpdateBook extends javax.swing.JFrame {

    /**
     * Creates new form UpdateBook
     */
    private FileController cn;
    public UpdateBook() {
        cn=new FileController(); 
        initComponents();
    }                       
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        this.setVisible(false);
    }                                        

    private void jButton9ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
       String ID=id.getText();
        String BookName=n.getText();
        String Author=a.getText();
        String TotalPages=tp.getText();
        String Category=cy.getSelectedItem().toString();
        if (ID.isEmpty() || BookName.isEmpty() || Author.isEmpty() || TotalPages.isEmpty() || Category.isEmpty()) {
        JOptionPane.showMessageDialog(null, "All fields must be filled in.");
        return; // Stop further processing
    }

    // Validate that ID is numeric
    if (!ID.matches("\\d+")) {
        JOptionPane.showMessageDialog(null, "Book ID must be numeric.");
        return;
    }

    // Validate that Total Pages is numeric
    try {
        Integer.parseInt(TotalPages); // Try to parse the value as an integer
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(null, "Total Pages must be a valid number.");
        return;
    }

    // Validate that Book Name and Author contain only alphabetic characters
    if (!BookName.matches("[a-zA-Z ]+")) {  // Allow spaces between words
        JOptionPane.showMessageDialog(null, "Book Name should only contain alphabetic characters.");
        return;
    }

    if (!Author.matches("[a-zA-Z ]+")) {  // Allow spaces between words
        JOptionPane.showMessageDialog(null, "Author should only contain alphabetic characters.");
        return;
    }
 
        String newData="\nId :"+ID+" Name: "+BookName+" Author: "+Author+" TotalPages: "+TotalPages+" Category: "+Category;
        System.out.println(newData);
        
        String fileName = "C:\\Users\\user\\Desktop.txt";
        cn.updateLine("Id :" + ID, newData, fileName);
    }                                        
