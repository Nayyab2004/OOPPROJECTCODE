3)FOR ISSUE BOOK:
package GUI;

import javax.swing.JOptionPane;
import Controller.FileController;

public class IssueBook extends javax.swing.JFrame {
private final FileController cn;
    /**
     * Creates new form IssueBook
     */
    public IssueBook() {
        initComponents();
         cn=new FileController();
    }                      
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        this.setVisible(false);
    }                                        

    private void jButton9ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String ID=id.getText();
        String Name=n.getText();
        String Class=c.getText();
        String Days=d.getText();
        // Validate if all fields are filled
    if (ID.isEmpty() || Name.isEmpty() || Class.isEmpty() || Days.isEmpty()) {
        JOptionPane.showMessageDialog(null, "Please fill in all fields.");
        return; // Stop further processing
    }

    // Validate if Days is a valid integer
    try {
        int daysInt = Integer.parseInt(Days);
        if (daysInt <= 0) {
            JOptionPane.showMessageDialog(null, "Please enter a valid number of days.");
            return;
        }
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(null, "Days should be a valid integer.");
        return;
    }

    // Validate if Class field contains only alphabetic characters
    if (!Class.matches("[a-zA-Z]+")) {
        JOptionPane.showMessageDialog(null, "Class should contain only alphabetic characters.");
        return;
    }
 
        String m="\nId :"+ID+" Name: "+Name+" Class: "+Class+" TotalDays: "+Days;
        System.out.println(m);
        
        
        String fileName = "C:\\Users\\user\\Desktop.txt";
        cn.createFile(fileName);
        cn.add(m,fileName);
        JOptionPane.showMessageDialog(null,"Issued Sucessfully");
        id.setText("");
        n.setText("");
        c.setText("");
        d.setText("");        // TODO add your handling code here:
    }                                        

    public static void main(String args[]) {
       
        try {
